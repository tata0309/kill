#include <iostream>

int main() {
    double num1, num2;
    char op;

    std::cout << "첫 번째 숫자를 입력하세요: ";
    std::cin >> num1;

    std::cout << "두 번째 숫자를 입력하세요: ";
    std::cin >> num2;

    std::cout << "연산자를 입력하세요 (+, -, *, /): ";
    std::cin >> op;

    double result;
    bool isValidOperator = true;

    switch (op) {
        case '+':
            result = num1 + num2;
            break;
        case '-':
            result = num1 - num2;
            break;
        case '*':
            result = num1 * num2;
            break;
        case '/':
            if (num2 != 0) {
                result = num1 / num2;
            } else {
                std::cout << "0으로 나눌 수 없습니다." << std::endl;
                isValidOperator = false;
            }
            break;
        default:
            std::cout << "잘못된 연산자입니다." << std::endl;
            isValidOperator = false;
    }

    if (isValidOperator) {
        std::cout << "결과: " << result << std::endl;
    }

    return 0;
}
